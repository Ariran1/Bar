  body
    include elements/icons.html
    style.
      div.icones {
        display: flex;
        flex-wrap:wrap;
        
      }
      div>div {
        padding:20px;
        width:90px;
        text-align:center;
      }
      svg {
        display:inline-block;
        width:64px;
        height:64px;
      }
      
      
      
      
    script.
        var a = `<div class="icones">`;
        var icons = document.querySelectorAll('[id]');
        for (var i = 0; i < icons.length; i++) {
          a += `<div>
          <svg viewBox="0 0 48 48">
            <use xlink:href="#`+ icons[i].id +`" style="stroke-width: 1px;fill: red;stroke: black;">
          </svg>
          <p contenteditable>` + icons[i].id + `</p></div>`;
        }
        a += `</div>`;
        document.body.insertAdjacentHTML('beforeend',a);
          
      
