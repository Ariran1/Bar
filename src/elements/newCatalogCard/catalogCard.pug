.catalogCard
  a.catalogCard__link( href='')
    .catalogCard__imageContainer
      img.catalogCard__image( src='images/shirt.png', alt='')
      span.verticalAlignMethod
    .catalogCard__contentContainer
      div.catalogCard__action
      span.catalogCard__price 1 390  руб
      .catalogCard__description
        span.catalogCard__description-name(style='overflow: hidden;') Медведь
        span.catalogCard__description-type(style='overflow: hidden;') Мужская футболка
  if (hoverDrop)
    .catalogCard__hoverContent
      .catalogCard__hoverContent-buttonContainer
        - var button = {click:true};
        include ../button/button.pug
