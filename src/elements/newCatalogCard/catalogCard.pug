- var number = (1 + Math.random() * 3).toFixed(0);
.catalogCard
  label.catalogCard__like
    input(type="checkbox" name="catalogCard-like")
    svg(viewBox="-1 -1 51 51")
      use(xlink:href="#icon-heart")
  a.catalogCard__link( href='')
    .catalogCard__imageContainer
      if (number == 1 || number == 4)
        img.catalogCard__image.catalogCard__image--high( src='images/product' + number + '.jpg', alt='')
      else 
        img.catalogCard__image( src='images/product' + number + '.jpg', alt='')
        
      span.verticalAlignMethod
    .catalogCard__contentContainer
      .catalogCard__action
        | До конца акции осталось
      .catalogCard__price 
        span.catalogCard__price-before 1 390  руб
        span.catalogCard__price-after 999  руб
      .catalogCard__description
        .catalogCard__description-name Медведь
        .catalogCard__description-productType Мужская футболка
  if (hoverDrop)
    .catalogCard__hoverContent
      .catalogCard__hoverContent-buttonContainer
        - var button = {click:true};
        include ../button/button.pug
