.catalog__filters
  .catalog__filters--helperForTable--tableRow
    - var number = Math.random().toFixed(5)*1e5;
    .catalog__filters--helperForTable--tableCell
      .catalog__productType.filter
        input.filter__input(id="showFilter" + number type="checkbox" name="showFilterInCatalog" checked)
        label.filter__label.color_blue(for="showFilter" + number)
          span.filter__variable
            svg(viewBox="0 0 48 48" style="vertical-align: bottom;") //- тег style только для иконки signPost
              use(xlink:href="#icon-signpost")
            span.filter__variable-text Майки
          svg.filter__arrow(viewBox="0 0 48 48")
            use(xlink:href="#icon-arrow")
      
        - 
          var dropList = [
            {name:'Футболки',icon:'futbolki'},
            {name:'Свитшоты',icon:'tolstovki'},
            {name:'Худи с капюшоном',icon:'hudi'},
            {name:'Бомберы',icon:'bomber'},
            {name:'Платья',icon:'platie-s-rukavom'},
            {name:'Юбки',icon:'ubka-s-melkimi-skladkami'},
            {name:'Майки',icon:'mayki'}];
            
        div(data-style="dropList")
          ul
            each item in dropList 
              if (item.name.length == 5)
                li.color_blue
                  a
                    svg(viewBox="0 0 48 48")
                      use(xlink:href="#icon-" + item.icon)
                    span= item.name
              else 
                li
                  a
                    svg(viewBox="0 0 48 48")
                      use(xlink:href="#icon-" + item.icon)
                    span= item.name
                  
